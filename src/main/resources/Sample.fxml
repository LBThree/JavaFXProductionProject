<AnchorPane prefHeight="500.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller">
  <children>
    <TabPane prefHeight="500.0" prefWidth="500.0" stylesheets="@CascadingStyle.css" tabClosingPolicy="UNAVAILABLE">
      <tabs>
        <Tab closable="false" text="Produce">
          <content>
            <AnchorPane minHeight="450.0" minWidth="500.0">
              <children>
                <Label layoutX="30.0" layoutY="58.0" text="Choose Product">
                  <font>
                    <Font size="18.0" />
                  </font>
                </Label>
                <ListView layoutX="183.0" layoutY="20.0" prefHeight="130.0" prefWidth="280.0" />
                <ComboBox fx:id="produce_quantity_comboBox" layoutX="183.0" layoutY="176.0" prefHeight="25.0" prefWidth="280.0" />
                <Label layoutX="27.0" layoutY="175.0" text="Choose Quantity">
                  <font>
                    <Font size="18.0" />
                  </font>
                </Label>
                <Button fx:id="produce_recordProduction_button" layoutX="150.0" layoutY="236.0" mnemonicParsing="false" prefHeight="200.0" prefWidth="200.0" text="Record Production" textAlignment="CENTER" textFill="RED" textOverrun="CLIP" wrapText="true">
                  <font>
                    <Font size="24.0" />
                  </font>
                </Button>
              </children>
            </AnchorPane>
          </content>
        </Tab>
        <Tab closable="false" text="Production Log">
          <content>
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
              <children>
                <TextArea layoutX="5.0" layoutY="14.0" prefHeight="450.0" prefWidth="490.0" />
              </children>
            </AnchorPane>
          </content>
        </Tab>
        <Tab closable="false" text="Product Line">
          <content>
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
              <children>
                <GridPane layoutY="21.0" prefHeight="161.0" prefWidth="500.0">
                  <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  </columnConstraints>
                  <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  </rowConstraints>
                  <children>
                    <Label alignment="CENTER" contentDisplay="TOP" prefHeight="35.0" prefWidth="253.0" stylesheets="@CascadingStyle.css" text="Product Name" textAlignment="CENTER" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
                      <font>
                        <Font size="18.0" />
                      </font>
                    </Label>
                    <Label text="Manufacturer" textAlignment="CENTER" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER">
                      <font>
                        <Font size="18.0" />
                      </font>
                    </Label>
                    <Label text="Item Type" textAlignment="CENTER" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER">
                      <font>
                        <Font size="18.0" />
                      </font>
                    </Label>
                    <TextField fx:id="productLine_ProductName_TextField" maxWidth="-Infinity" prefWidth="225.0" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
                    <TextField fx:id="ProductLine_Manufacturer_TextField" maxWidth="-Infinity" prefWidth="225.0" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER" />
                    <TextField fx:id="ProductLine_ItemType_TextField" maxWidth="-Infinity" prefWidth="225.0" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER" />
                  </children>
                </GridPane>
                <Button fx:id="productLine_addProduct_button" layoutX="313.0" layoutY="197.0" mnemonicParsing="false" onAction="#addProductToDataBase" text="Add Product">
                  <font>
                    <Font size="18.0" />
                  </font>
                </Button>
                <TableView layoutX="14.0" layoutY="267.0" prefHeight="190.0" prefWidth="479.0">
                  <columns>
                    <TableColumn prefWidth="152.0" text="Name" />
                    <TableColumn prefWidth="172.0" text="Manufacturer" />
                    <TableColumn prefWidth="154.0" text="Type" />
                  </columns>
                </TableView>
                <Label layoutX="55.0" layoutY="233.0" text="Existing Products">
                  <font>
                    <Font name="Symbol" size="24.0" />
                  </font>
                </Label>
              </children>
            </AnchorPane>
          </content>
        </Tab>
      </tabs>
    </TabPane>
  </children>
</AnchorPane>
